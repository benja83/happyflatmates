</header >
<div class="jumbotron">
  <div class="container">
    <section id="sign-in">
      <header class="text-center">
        <h2>Happy flatmate!</h2>
        <h3>A useful app to make flats sharing an amazing experience!</h3>
      </header>
        <%= render '/shared/error' %>
        <div class="container">
          <%= form_for @user, html: {class: "form-signin", role: "form"} do |f| %>
            <h2 class="form-signup-heading text-center">Please sign up</h2>
            <%= f.text_field :name, class: "form-control",placeholder: "name" %> <br/>
            <%= f.text_field :email, class: "form-control", placeholder: "Email address"%> <br/>
            <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
          <% end %>
        </div>
        <br>
        <h1 class="text-center">Sharing flats! Sharing lives!</h1>
    </section>
  </div>
</div>
<div class="mastfoot">
  <div class="inner">
    <p>Benjamin Tarenne</p>
  </div>
</div>
