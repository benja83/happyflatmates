<div class="col-sm-3 col-md-2 sidebar" id="sidebar-profile">
  <ul class="nav nav-sidebar">
    <li class="active"><a href="#">Your flat</a></li>
    <li class="text-center"><h4><%= @flat.name %></h4></li>
    <li class="text-center"><%= @flat.address %></li>
  </ul>
  <ul class="nav nav-sidebar media-list">
    <li class="active media"><a href="#">Flat mates</a></li>
    <% @users.each do |user| %>
      <li class="media reset-margin">
        <a  class="pull-left reset-margin" href='<%= user_path(user.id) %>'>
          <img src="<%= User.image_url(user.id) %>" alt="" class="media-object user-img img-responsive img-circle">
        </a>
        <div class="media-body user-name">
        <%= user.name %><br>
        </div>

      </li>
    <% end %>
  </ul>
</div>