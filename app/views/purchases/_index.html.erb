<ul class="nav nav-sidebar reset-margin">
  <li class="active">
    <a id="shopping-list">
      Shopping List
    </a>
    <%= render 'purchases/new' %>
  </li>
  <%= form_tag update_status_purchases_path, method: :patch,html: {class: "navbar-form reset-margin", role: "form"} do %>
    <%  @purchases.each do |purchase| %>
      <li class="disp">
        <table>
          <tr>
            <td class="col-sm-3">
              <%= link_to purchase.name, flat_purchase_path(params[:id],purchase) %>
            </td>
            <td class="col-sm-9">
              <%= check_box_tag 'bought[]', purchase.id, false, class: '' %>
            </td>
          </tr>
        </table>
      </li>
    <% end %>
    <%= hidden_field_tag :flat_id, params[:id] %>
      <li class="disp">
        <%= submit_tag 'I bought it' %>
      </li>
  <% end %>
</ul>